{
  "name": "backend",
  "version": "3.9.0",
  "private": true,
  "description": "",
  "main": "dist/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "postinstall": "npx prisma generate",
    "build": "npm run build:frontend && tsc",
    "build:frontend": "cd ../frontend && npm install && npm run build && cp -r dist/* ../backend/public/",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:local": "dotenv -e .env.local -- tsx watch src/server.ts",
    "prisma:studio": "dotenv -e .env.local -- npx prisma studio",
    "prisma:studio:local": "dotenv -e .env.local -- prisma studio",
    "prisma:studio:prod": "echo '⚠️  WARNING: Opening PRODUCTION database! Press Ctrl+C to cancel...' && sleep 5 && npx prisma studio",
    "db:check": "dotenv -e .env.local -- node check-users.js",
    "db:check:prod": "echo '⚠️  WARNING: Checking PRODUCTION database! Press Ctrl+C to cancel...' && sleep 5 && node check-users.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:recipe": "ts-node src/tests/run-recipe-tests.ts",
    "db:backup": "node scripts/backup-database.js",
    "db:backup:json": "dotenv -e .env.local -- node scripts/backup-database-json.js",
    "db:safe-cleanup": "dotenv -e .env.local -- node scripts/safe-database-cleanup.js",
    "db:check-safety": "node -e \"console.log(require('./config/database.config').getConfig())\"",
    "db:create:customer-tables": "dotenv -e .env.local -- node scripts/create-customer-tables.js",
    "db:migrate:multi-tenant": "dotenv -e .env.local -- node scripts/migrate-to-multi-tenant.js",
    "db:check:multi-tenant": "dotenv -e .env.local -- node scripts/check-multi-tenant-status.js",
    "test:email": "npm run build && node scripts/test-email-service.js",
    "test:email:local": "npm run build && dotenv -e .env.local -- node scripts/test-email-service.js",
    "migrate": "prisma migrate dev",
    "migrate:local": "dotenv -e .env.local -- prisma migrate dev",
    "db:push:local": "dotenv -e .env.local -- prisma db push",
    "db:seed:local": "dotenv -e .env.local -- node scripts/seed.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.19.0 <23.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.1.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.14.1",
    "resend": "^6.5.2",
    "stripe": "^20.0.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4"
  }
}
